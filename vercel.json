{
  "version": 2,
  "buildCommand": "next build",
  "outputDirectory": ".next",
  "builds": [
    {
      "src": "src/app/**/*.{js,ts,jsx,tsx}",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/app/$1"
    }
  ]
}
